<?xml version='1.0' encoding='ISO-8859-1'?>
<guiTheme extend='/shareddata/guithemes/modern/modern.guitheme.xml'>
	<!-- Main GUI Theme based on modern GUI Theme included in the DragonScript Module -->
	
	<!-- Change desktop mouse pointer -->
	<designer name='Desktop' extendNamed='Desktop'>
		<mousePointer parameter='normal.mousePointer' type='Image'>
			<image parameter='image'>/content/ui/pointer.png</image>
		</mousePointer>
	</designer>
	
	<!-- Main menu window is full screen with no border and black background -->
	<designer name='WindowMainMenu' type='Window'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0'/>
		</canvasCreator>
	</designer>
	
	<designer name='Panel.MainWindow.HostGame' type='Widget'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0.7' g='0.85' b='1' a='1'/>
			<color parameter='colorLine' r='0.4' g='0.6' b='0.8'/>
			<float parameter='thickness'>3</float>
		</canvasCreator>
		<borderSize parameter='normal.padding' left='10' top='20' right='10' bottom='20'/>
	</designer>
	
	<designer name='Label.MainWindow.SessionName' extendNamed='Label'>
		<color parameter='normal.textColor' r='0.2' g='0.3' b='0.4'/>
	</designer>
	
	<designer name='Panel.MainWindow.JoinGame' type='Widget'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='1' g='0.85' b='0.7' a='1'/>
			<color parameter='colorLine' r='0.8' g='0.6' b='0.4'/>
			<float parameter='thickness'>3</float>
		</canvasCreator>
		<borderSize parameter='normal.padding' left='10' top='20' right='10' bottom='20'/>
	</designer>
	
	<designer name='Label.MainWindow.HostName' extendNamed='Label'>
		<color parameter='normal.textColor' r='0.4' g='0.3' b='0.2'/>
	</designer>
	
	<designer name='Panel.MainWindow.Player' type='Widget'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0.6' g='0.8' b='0.6' a='1'/>
			<color parameter='colorLine' r='0.2' g='0.6' b='0.2'/>
			<float parameter='thickness'>3</float>
		</canvasCreator>
		<borderSize parameter='normal.padding' left='10' top='20' right='10' bottom='20'/>
	</designer>
	
	<designer name='Label.MainWindow.PlayerName' extendNamed='Label'>
		<color parameter='normal.textColor' r='0.1' g='0.3' b='0.1'/>
	</designer>
	
	<!-- Loading window -->
	<!--<designer name='Panel.WindowLoading' type='Widget'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0' a='0.5'/>
		</canvasCreator>
		<point parameter='normal.minimumSize' x='250' y='100'/>
	</designer>-->
	
	<designer name='Label.WindowLoading' extendNamed='Label'>
		<color parameter='normal.textColor' r='1' g='1' b='1'/>
	</designer>
</guiTheme>
