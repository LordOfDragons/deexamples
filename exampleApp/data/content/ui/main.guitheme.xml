<?xml version='1.0' encoding='ISO-8859-1'?>
<guiTheme extend='/shareddata/guithemes/modern/modern.guitheme.xml'>
	<!-- Main GUI Theme based on modern GUI Theme included in the DragonScript Module -->
	
	<!-- Change desktop mouse pointer -->
	<designer name='Desktop' extendNamed='Desktop'>
		<mousePointer parameter='normal.mousePointer' type='Image'>
			<image parameter='image'>/content/ui/pointer.png</image>
		</mousePointer>
	</designer>
	
	<!-- Main menu window is full screen with no border and black background -->
	<designer name='Window.MainMenu' type='Window'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0'/>
		</canvasCreator>
	</designer>
	
	<!-- Loading window -->
	<!--<designer name='Panel.WindowLoading' type='Widget'>
		<canvasCreator parameter='normal.canvas' type='Rectangle'>
			<color parameter='colorFill' r='0' g='0' b='0' a='0.5'/>
		</canvasCreator>
		<point parameter='normal.minimumSize' x='250' y='100'/>
	</designer>-->
	
	<designer name='Label.WindowLoading' extendNamed='Label'>
		<color parameter='normal.textColor' r='1' g='1' b='1'/>
	</designer>
</guiTheme>
